<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wechat_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_weight="1"
            android:src="@mipmap/share_wechat"/>
        <ImageView
            android:id="@+id/wechat_moments_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:src="@mipmap/share_wechat_moments"/>
        <ImageView
            android:id="@+id/qq_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:src="@mipmap/share_qq"/>
        <ImageView
            android:id="@+id/qzone_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:src="@mipmap/share_qzone"/>
        <ImageView
            android:id="@+id/sina_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:src="@mipmap/share_sina"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1px"
        android:gravity="center"
        android:background="@drawable/cancel_bg_selector"
        android:text="取消"/>

</LinearLayout>